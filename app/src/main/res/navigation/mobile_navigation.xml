<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_profile">

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.gotoesig.ui.profile.ProfileFragment"
        android:label="@string/menu_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_stats"
        android:name="com.example.gotoesig.ui.statistics.StatisticsFragment"
        android:label="@string/menu_stats"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.gotoesig.ui.logout.LogoutFragment"
        android:label="@string/menu_logout"
        tools:layout="@layout/fragment_logout" />

    <!-- Fragment pour la recherche de trajets -->
    <fragment
        android:id="@+id/nav_search_trip"
        android:name="com.example.gotoesig.ui.searchtrips.SearchTripFragment"
        android:label="SearchTrip"
        tools:layout="@layout/fragment_search_trip" />

    <!-- Fragment pour lister ses trajets-->
    <fragment
        android:id="@+id/nav_my_trips"
        android:name="com.example.gotoesig.ui.mytrips.MyTripsFragment"
        android:label="Mytrips"
        tools:layout="@layout/fragment_my_trips" />

    <!-- Fragment pour l'ajout de trajet-->
    <fragment
        android:id="@+id/nav_publish_trip"
        android:name="com.example.gotoesig.ui.addtrip.AddTripFragment"
        android:label="Publish Trips"
        tools:layout="@layout/fragment_publish_trip" />
</navigation>